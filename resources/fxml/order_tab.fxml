<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pandaism.gui.controller.OrderTabController">
    <top>
        <HBox spacing="5.0">
            <Label text="Latitude">
                <font>
                    <Font name="System Bold" size="13"/>
                </font>
            </Label>
            <Label fx:id="latitude_label"/>

            <Label text="Longitude">
                <font>
                    <Font name="System Bold" size="13"/>
                </font>
            </Label>
            <Label fx:id="longitude_label"/>

            <Label text="Time">
                <font>
                    <Font name="System Bold" size="13"/>
                </font>
            </Label>
            <Label fx:id="time_label"/>

            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Path"/>
            <TextField minWidth="150" prefWidth="300" fx:id="save_path"/>
            <Button text="Export" onAction="#export"/>
        </HBox>
    </top>
    <left>
        <VBox spacing="5.0">
            <VBox fx:id="input_pane"/>
            <HBox spacing="5.0">
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Submit" onAction="#onSubmit"/>
                <Button text="Clear" onAction="#onClear"/>
            </HBox>
        </VBox>
    </left>
    <center>
        <AnchorPane>
            <TableView fx:id="content_pane" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0" onKeyPressed="#deleteRow">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <padding>
                <Insets left="5.0" top="5.0" bottom="5.0"/>
            </padding>
        </AnchorPane>
    </center>
    <bottom>
        <HBox>
            <Label fx:id="device_label"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Count: " />
            <Label text="0" fx:id="count_label" />
        </HBox>
    </bottom>

    <padding>
        <Insets left="10.0" right="10.0" top="10.0" bottom="10.0"/>
    </padding>
</BorderPane>
